{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,  // Disable type checking for JS files
    "isolatedModules": true,
    "strict": false,    // Disable strict mode
    "noImplicitAny": false,  // Allow implicit 'any' types
    "strictFunctionTypes": false,  // Allow function parameter types to be more relaxed
    "strictPropertyInitialization": false,  // Allow uninitialized properties
    "strictNullChecks": false  // Allow null checks to be more relaxed
  },
  "include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.js", "src/**/*.svelte"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
